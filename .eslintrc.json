{
  "extends": "standard",
  "parser": "babel-eslint",
  "plugins": [
    "standard"
  ],
  "rules": {
    "semi": ["error", "always"],
    "indent": ["warn", 2, {
      "VariableDeclarator": { "var": 2 },
      "SwitchCase": 1,
      "outerIIFEBody": 0
    }],
    "space-before-function-paren": "off",
    "operator-linebreak": ["error", "before", { "overrides": { "=": "after" } }],
    "no-cond-assign": "off",
    "no-useless-escape": "off",
    "no-return-assign": "off",
    "one-var": "off",
    "no-control-regex": "off"
  },
  "env": {
    "node": true,
    "browser": true,
    "amd": true,
    "jasmine": true
  }
}
